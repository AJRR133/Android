<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/padre">
        <RelativeLayout
            android:id="@+id/hijo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="#ff0000"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/hijo2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/hijo"
            android:background="#0000ff"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/hijo3"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/hijo2"
            android:background="#6AFF00"
            ></RelativeLayout>

        <RelativeLayout
            android:id="@+id/hijo4"
            android:layout_width="1000dp"
            android:layout_height="350dp"
            android:layout_below="@id/hijo3"
            android:background="#673AB7"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/hijo5"
            android:layout_width="150dp"
            android:layout_height="350dp"
            android:layout_below="@id/hijo4"
            android:background="#FFEB3B"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/hijo6"
            android:layout_width="350dp"
            android:layout_height="281dp"
            android:layout_toRightOf="@id/hijo5"
            android:background="#F487ED"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@id/hijo5"

            ></RelativeLayout>




    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>